generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PostType {
  Tweet
  Video
  Document
  Note
  Link
}

model User {
  id String @id
  email String @unique
  name String
  imageUrl String
  contents Content[]
  links Links[]
}

model Content {
  id String @id @default(uuid()) 
  type PostType @default(Note)
  url String?
  title String
  description String?
  userId String
  user User @relation(fields: [userId], references: [id])
  tags Tags[]
}

model Tags {
  id String @id @default(uuid())
  title String
  contenId Content @relation(fields: [id], references: [id])
}

model Links {
  id String @id @default(uuid())
  hash String
  userId String
  user User @relation(fields: [userId], references: [id])
}